//- Small Buttons Mixin   
mixin SmallButtons(items)
    each item in items
        .text-center.col-12.col-sm-6.col-md-12
            button.btn.m-1.btn-sm(type='button' data-bs-toggle='tooltip' class=item.BtnColor title=item.tooltip)=item.title
// Small Buttons Menu            
.btn-showcase.row
    +SmallButtons(SMALL_BUTTONS)
