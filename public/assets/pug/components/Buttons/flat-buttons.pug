//- Flat Buttons Mixin   
mixin FlatButtons(items)
    each item in items
        .text-center.col-12.col-sm-6.col-md-12
            button.btn.m-1.flat-btn(type='button' data-bs-toggle='tooltip' class=item.BtnColor title=item.tooltip)=item.title
// Flat Buttons Menu            
.btn-showcase.row
    +FlatButtons(FLAT_BUTTONS)
