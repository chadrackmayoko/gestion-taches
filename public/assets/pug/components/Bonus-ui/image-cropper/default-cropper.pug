                        span.fa.fa-arrows-alt
                    button.btn.btn-primary(type='button' data-method='setDragMode' data-option='crop' title='Crop')
                        span.docs-tooltip(data-bs-toggle='tooltip' title='cropper.setDragMode("crop")')
                        span.fa.fa-crop-alt
                .btn-group
                    button.btn.btn-primary(type='button' data-method='zoom' data-option='0.1' title='Zoom In')
                        span.docs-tooltip(data-bs-toggle='tooltip' title='cropper.zoom(0.1)')
                        span.fa.fa-search-plus
                    button.btn.btn-primary(type='button' data-method='zoom' data-option='-0.1' title='Zoom Out')
                        span.docs-tooltip(data-bs-toggle='tooltip' title='cropper.zoom(-0.1)')
                        span.fa.fa-search-minus
                .btn-group
                    button.btn.btn-light-primary(type='button' data-method='move' data-option='-10' data-second-option='0' title='Move Left')
