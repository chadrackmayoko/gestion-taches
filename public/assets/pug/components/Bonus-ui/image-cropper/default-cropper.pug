                        span.docs-tooltip(data-bs-toggle='tooltip' title='cropper.move(0, -10)')
                        span.fa.fa-arrow-up
                    button.btn.btn-light-primary(type='button' data-method='move' data-option='0' data-second-option='10' title='Move Down')
                        span.docs-tooltip(data-bs-toggle='tooltip' title='cropper.move(0, 10)')
                        span.fa.fa-arrow-down
                .btn-group
                    button.btn.btn-light-secondary(type='button' data-method='rotate' data-option='-45' title='Rotate Left')
                        span.docs-tooltip(data-bs-toggle='tooltip' title='cropper.rotate(-45)')
