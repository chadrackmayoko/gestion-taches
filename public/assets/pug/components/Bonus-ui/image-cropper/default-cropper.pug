                        span.docs-tooltip(data-bs-toggle='tooltip' title='cropper.scaleY(-1)')
                        span.fa.fa-arrows-alt-v
                .btn-group
                    button.btn.btn-light-tertiary(type='button' data-method='crop' title='Crop')
                        span.docs-tooltip(data-bs-toggle='tooltip' title='cropper.crop()')
                        span.fa.fa-check
                    button.btn.btn-light-tertiary(type='button' data-method='clear' title='Clear')
                        span.docs-tooltip(data-bs-toggle='tooltip' title='cropper.clear()')
                        span.fa.fa-times
                .btn-group
                    button.btn.btn-light-tertiary(type='button' data-method='disable' title='Disable')
                        span.docs-tooltip(data-bs-toggle='tooltip' title='cropper.disable()')
                        span.fa.fa-lock
                    button.btn.btn-light-tertiary(type='button' data-method='enable' title='Enable')
                        span.docs-tooltip(data-bs-toggle='tooltip' title='cropper.enable()')
                        span.fa.fa-unlock
                .btn-group
                    button.btn.btn-light-info(type='button' data-method='reset' title='Reset')
                        span.docs-tooltip(data-bs-toggle='tooltip' title='cropper.reset()')
                        span.fa.fa-sync-alt
                    label.btn.btn-light-info.btn-upload.mb-0(for='inputImage' title='Upload image file')
                        input#inputImage.sr-only(type='file' name='file' accept='image/*')
                        span.docs-tooltip(data-bs-toggle='tooltip' title='Import image with Blob URLs')
                        span.fa.fa-upload
                    button.btn.btn-light-info(type='button' data-method='destroy' title='Destroy')
                        span.docs-tooltip(data-bs-toggle='tooltip' title='cropper.destroy()')
                        span.fa.fa-power-off
                // Show the cropped image in modal
                #getCroppedCanvasModal.modal.fade.docs-cropped(role='dialog' aria-hidden='true' aria-labelledby='getCroppedCanvasTitle' tabindex='-1')
                    .modal-dialog
                        .modal-content
                            .modal-header
                                h5#getCroppedCanvasTitle.modal-title Cropped
                                button.close(type='button' data-dismiss='modal' aria-label='Close')
                                    span(aria-hidden='true') &times;
                            .modal-body
                            .modal-footer
                                button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                                a#download.btn.btn-primary(href='javascript:void(0);' download='cropped.jpg') Download
                .btn-showcase
                    button.btn.btn-outline-primary(type='button' data-method='getData' data-option='' data-target='#putData')
                        span.docs-tooltip(data-bs-toggle='tooltip' title='cropper.getData()')
                            | Get Data
                    button.btn.btn-outline-primary(type='button' data-method='setData' data-target='#putData')
                        span.docs-tooltip(data-bs-toggle='tooltip' title='cropper.setData(data)')
                            | Set Data
                    button.btn.btn-outline-primary(type='button' data-method='getContainerData' data-option='' data-target='#putData')
                        span.docs-tooltip(data-bs-toggle='tooltip' title='cropper.getContainerData()')
