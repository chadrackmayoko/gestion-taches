//-// Bookmark mixin
mixin TotalInvestContent(items)

    each item in items 
        tr
            td
                .d-flex.align-items-center.gap-2
                    .flex-shrink-0
                        img(src=item.url, alt="")
                    .flex-grow-1 
                        a(href="user-profile.html")
                            h6.f-w-500=item.title
                        span.font-light.f-w-400.f-13=item.time
            td=item.price
            td=item.type
            td 
                button.btn.edge-btn.f-13.w-100(class=item.bgClass)=item.btnValue

// Bookmark menu
.card 
    .card-header.pb-0
        h4 Courses Highlighted
        .dropdown.icon-dropdown
          button#userdropdown1.btn.dropdown-toggle(type='button' data-bs-toggle='dropdown' aria-expanded='false')
            i.icon-more-alt
          .dropdown-menu.dropdown-menu-end(aria-labelledby='userdropdown1')
            a.dropdown-item(href='#') Weekly
            a.dropdown-item(href='#') Monthly
            a.dropdown-item(href='#') Yearly
    .card-body.pt-0.course-table
        .table-responsive 
            table.table
                thead 
                    tr 
                        th Course name
                        th Price
                        th Type
                        th Status
                tbody 
                    +TotalInvestContent(INVEST_ITEM)