    //-// Counter avatar mixin
mixin CountAvatar(items)
    each item in items 
        li.d-inline-block
            img(class=item.imgClass, src=`../assets/images/${item.src}`, alt='#')

.card.client-card
    .card-header.border-dash-bottom
        h4 Total Clients
        .card-icon  
            h3.f-w-600 7465
    .card-body 
        .d-block 
            .d-flex.justify-content-between.align-items-center     
                .team-member 
                    .customers.d-inline-block.avatar-group
                        ul
                            +CountAvatar(COUNT_AVATAR1)
                            li.d-inline-block
                                span.img-52.img-h-52.b-r-10 +4   
                .project-chart
                    #project.project            
            .client-btn.d-flex.justify-content-between
                a(href="letter-box.html").btn.btn-secondary All Clients
                a(href="list-products.html").btn.btn-primary.px-5.px-lg-3.px-md-2 Invite