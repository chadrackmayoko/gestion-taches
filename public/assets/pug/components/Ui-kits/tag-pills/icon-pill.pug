// Context-pill Card
.card 
    .card-header.pb-0
        +card-header('Rounded pills with icons', 'dote','','Use the', '.badge', ' utility class to make more icons.')
    .card-body
        .badge-spacing
            a.badge.b-ln-height.badge-primary.rounded-pill.p-2(href='#')
                +FeatherSprite('activity', 'feather')
            a.badge.b-ln-height.badge-secondary.rounded-pill.p-2(href='#')
