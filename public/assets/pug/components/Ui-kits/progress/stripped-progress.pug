// Stripped Progress Card
.card 
    .card-header.pb-0
        +card-header('Progress bars striped', '','','Add', '.progress-bar-striped , progress-bar', 'to apply a stripe via CSS gradient over the progress bars background color Using CSS Effects.')
    .card-body.progress-showcase
        .row
            .col
                .progress
                    .progress-bar.bg-primary.progress-bar-striped(role='progressbar' style='width: 10%' aria-valuenow='10' aria-valuemin='0' aria-valuemax='100')
                .progress
                    .progress-bar.progress-bar-striped.bg-secondary(role='progressbar' style='width: 25%' aria-valuenow='25' aria-valuemin='0' aria-valuemax='100')
                .progress
                    .progress-bar.progress-bar-striped.bg-tertiary(role='progressbar' style='width: 50%' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100')
                .progress
                    .progress-bar.progress-bar-striped.bg-info(role='progressbar' style='width: 75%' aria-valuenow='75' aria-valuemin='0' aria-valuemax='100')