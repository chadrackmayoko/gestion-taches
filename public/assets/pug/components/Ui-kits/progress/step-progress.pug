// Step Progress Bar
.card
    .card-header.pb-0
        +card-header('Progress with number steps', '','','Use the', '.position-absolute', 'to set progress numbers steps.')
    .card-body
        .position-relative.mx-3.my-4.progress-number
            .progress.progress-wrapper
                .progress-bar(role='progressbar' aria-label='Progress' style='width: 50%;' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100')
                button.position-absolute.top-0.start-0.translate-middle.btn-sm.btn-primary.rounded-circle(type='button') 1
                button.position-absolute.top-0.start-50.translate-middle.btn-sm.btn-primary.rounded-circle(type='button') 2
                button.progress-btn.position-absolute.top-0.start-100.translate-middle.btn-sm.rounded-circle(type='button') 3

