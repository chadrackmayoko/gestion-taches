//-// Status Avatar
-
    var STATUS_AVATAR =[
        {
            src: 'avatar/3.jpg',
            imgClass: 'img-100',
            status: 'status-online'
        },
        {
            src: 'avatar/4.jpg',
            imgClass: 'img-90',
            status: 'status-dnd'
        },
        {
            src: 'avatar/5.jpg',
            imgClass: 'img-80',
            status: 'status-offline'
        },
        {
            src: 'avatar/2.jpg',
            imgClass: 'img-70',
            status: 'status-online'
        }
    ]

//-// Status Avatar mixin
mixin StatusAvatar(items)
    each item in items 
        div.avatar
            img.rounded-circle(class=item.imgClass , src=`../assets/images/${item.src}`, alt='#') 
            .status(class=item.status)

// Status Avatar
.card 
    .card-header.pb-0
        +card-header('Status Indicator', 'dote','','Using', '.status-* (online/offline/dnd)', 'class you can set status of avatar.')
    .card-body
        .avatar-showcase
            .avatars
                +StatusAvatar(STATUS_AVATAR)
        .code-box-copy
          button.code-box-copy__btn.btn-clipboard(data-clipboard-target='#example-head' title='Copy')
            i.icofont.icofont-copy
          pre
            code.language-html#avatar-indicator
