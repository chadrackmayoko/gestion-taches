//-// Invoice mixin
mixin SellingContent(items)
    each item in items 
        tr
            td
                input.form-check-input(type="checkbox")
            td
                .d-flex.align-items-center.gap-2
                    .flex-shrink-0
                        img.img-30.b-r-10(src=item.url, alt="")
                    .flex-grow-1 
                        a(href="product.html") 
                            h6.f-w-500=item.title
                            span.font-light.f-w-400.f-13=item.date
            td=item.id
            td
                span.font-light=item.mail
            td=item.type
            td=item.price
            td 
                button.btn.edge-btn.f-13.w-100(class=item.bgClass)=item.btnValue

