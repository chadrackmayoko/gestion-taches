//-//gallery mixin
mixin ImgGallery(items)
    each item in items
        .pswp-gallery.col-xl-2.col-md-3.col-6.wow(class=item.wowClass)
            a(href=item.bigLight, data-pswp-width='1875' data-pswp-height='2500' target='_blank')
                img.img-thumbnail(src=item.lightGallery , alt='')

// gallery mixin
