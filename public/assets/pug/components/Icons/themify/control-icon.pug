-
    var THEMIFY_ITEM3 =[
        { id:'icon-control-stop' },
        { id:'icon-control-shuffle' },
        { id:'icon-control-play' },
        { id:'icon-control-pause' },
        { id:'icon-control-forward' },
        { id:'icon-control-backward' },
        { id:'icon-volume' },
        { id:'icon-control-skip-forward' },
        { id:'icon-control-skip-backward' },
        { id:'icon-control-record' },
        { id:'icon-control-eject' }
    ]
//-// Themify mixin
mixin IcoContent(items)
    each item in items 
        .col-xxl-2.col-xl-3
            .card.d-flex.align-items-center.flex-column.default-border
                i.icofont(class=item.id)
                .flex-grow-1
                    h6=item.id
// Themify icon
.card
    .card-header.pb-0.d-flex.justify-content-between.align-items-center
        h4 Control Icons
    .card-body
        .row.icon-event.iconly-icons.icon-lists
            +IcoContent(THEMIFY_ITEM3)