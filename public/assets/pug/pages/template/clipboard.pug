-var sidebar                = true;
-var theme_customizer       = true;
-var scrollbar              = true;
-var height_equal = true;
- var page_clipboard = true;
include ../../components/mixin
doctype html
html(lang='en') 
  include ../../components/header-files
  body
    include ../../components/tap-top
    include ../../components/loader
    main#pageWrapper.page-wrapper.compact-wrapper
        include ../../components/header/header
        .page-body-wrapper
          include ../../components/sidebar
          .page-body
            .container-fluid
              +breadcrumb(['Form Widgets','Clipboard'],'Clipboard')
            // Container-fluid starts
            .container-fluid
                .row 
                    .col-sm-12.col-md-6
                        include ../../components/forms/clipboard/clipboard_on_input
                    .col-sm-12.col-md-6
                        include ../../components/forms/clipboard/clipboard_on_textarea
                    .col-sm-12.col-md-6
                        include ../../components/forms/clipboard/clipboard_on_paragraph
                    .col-sm-12.col-md-6
                        include ../../components/forms/clipboard/copy_portion_paragraph
            // Container-fluid starts
          include ../../components/footer
    include ../../components/footer-files