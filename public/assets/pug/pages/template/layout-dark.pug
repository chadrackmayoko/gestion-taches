-var sidebar                = true;
-var theme_customizer       = true;
-var scrollbar              = true;
-var prism                 = true;
-var page_clipboard        = true;
-var customcard           = true;
include ../../components/mixin
doctype html
html(data-theme="dark")
  include ../../components/header-files
  body
    include ../../components/tap-top
    include ../../components/loader
    main#pageWrapper.page-wrapper.compact-wrapper
        include ../../components/header/header
        .page-body-wrapper
          include ../../components/sidebar
          .page-body
            .container-fluid
              +breadcrumb(['Page Layout','Layout Dark'],'Layout Dark')
            // Container-fluid starts
            .container-fluid
              .row
                .col-sm-12
                  .card.alert.alert-primary(role='alert')
                    h4.alert-heading Tip!
                    p
                      | Add the class="dark-only" to the body tag to get this layout.
                .col-sm-12
                  .card
                    .card-header
                      h5 Title
                      .card-header-right
                        ul.list-unstyled.card-option
                            li
                                i.icon-more-alt
                            li
                                i.view-html.fa.fa-code
                            li
                                i.icofont.icofont-maximize.full-card
                            li
                                i.icofont.icofont-minus.minimize-card
                            li
                                i.icofont.icofont-refresh.reload-card
                            li
                                i.icofont.icofont-error.close-card
                    .card-body
                      span Start Here
                      .code-box-copy
                        button.code-box-copy__btn.btn-clipboard(data-clipboard-target='#example-head', title='Copy')
                          i.icofont.icofont-copy
                        pre
                          code.language-html#example-head
                            | &lt;!-- Cod Box Copy begin --&gt;
                            | &lt;div class=&quot;card-body&quot;&gt;
                            | &lt;span&gt;Start Here&lt;/span&gt;
                            | &lt;/div&gt;    
                            | &lt;!-- Cod Box Copy end --&gt;
                    .card-footer
                      h6.mb-0 Card Footer
            // Container-fluid Ends
          include ../../components/footer
    include ../../components/footer-files
