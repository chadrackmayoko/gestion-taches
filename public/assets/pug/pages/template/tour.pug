-var sidebar                = true;
-var theme_customizer       = true;
-var scrollbar              = true;
-var tour           = true;
include ../../components/mixin
doctype html
html(lang='en') 
  include ../../components/header-files
  body
    include ../../components/tap-top
    include ../../components/loader
    main#pageWrapper.page-wrapper.compact-wrapper
        include ../../components/header/header
        .page-body-wrapper
          include ../../components/sidebar
          .page-body
            .container-fluid
              +breadcrumb(['Bonus Ui','Tour'],'Tour')
            // Container-fluid starts
            .container-fluid.user-profile
              .row 
                .col-xl-12
                  include ../../components/Bonus-ui/tour/tour-profile
                .col-xl-12
                  include ../../components/Bonus-ui/tour/second-post
                .col-xl-12
                  include ../../components/Bonus-ui/tour/third-post
                .col-xl-12
                  include ../../components/Bonus-ui/tour/forth-post
                .col-xl-12
                  include ../../components/Bonus-ui/tour/fifth-post
            // Container-fluid ends
          include ../../components/footer
    include ../../components/footer-files