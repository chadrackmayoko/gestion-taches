-var sidebar                = true;
-var theme_customizer       = true;
-var scrollbar              = true;
-var height_equal           = true;

include ../../components/mixin
doctype html
html(lang='en') 
  include ../../components/header-files
  body
    include ../../components/tap-top
    include ../../components/loader
    main#pageWrapper.page-wrapper.compact-wrapper
        include ../../components/header/header
        .page-body-wrapper
          include ../../components/sidebar
          .page-body
            .container-fluid
              +breadcrumb(['Bonus Ui','Creative Card'],'Creative Card')
            // Container-fluid starts
            .container-fluid
              .row 
                .col-xl-6
                  include ../../components/Bonus-ui/creative-card/border-left
                .col-xl-6
                  include ../../components/Bonus-ui/creative-card/border-right
                .col-xl-6
                  include ../../components/Bonus-ui/creative-card/border-top
                .col-xl-6
                  include ../../components/Bonus-ui/creative-card/border-bottom
                .col-xl-4
                  include ../../components/Bonus-ui/creative-card/border-primary-state
                .col-xl-4
                  include ../../components/Bonus-ui/creative-card/border-warning-state
                .col-xl-4
                  include ../../components/Bonus-ui/creative-card/border-success-state
                .col-xl-6
                  include ../../components/Bonus-ui/creative-card/absolute-card
                .col-xl-6
                  include ../../components/Bonus-ui/creative-card/color-state
            // Container-fluid ends
          include ../../components/footer
    include ../../components/footer-files