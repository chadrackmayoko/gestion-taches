-var sidebar                = true;
-var theme_customizer       = true;
-var scrollbar              = true;
-var height_equal = true;
-var flatpickr = true;
include ../../components/mixin
doctype html
html(lang='en') 
  include ../../components/header-files
  body
    include ../../components/tap-top
    include ../../components/loader
    main#pageWrapper.page-wrapper.compact-wrapper
        include ../../components/header/header
        .page-body-wrapper
          include ../../components/sidebar
          .page-body
            .container-fluid
              +breadcrumb(['Form Widgets','Datepicker'],'Datepicker')
            // Container-fluid starts
            .container-fluid
              .row 
                .col-xl-6
                  include ../../components/forms/date-picker/default-calendar
                .col-xl-6
                  include ../../components/forms/date-picker/bootstrap-calendar
                .col-xl-6
                  include ../../components/forms/date-picker/date-components
                .col-xl-6
                  include ../../components/forms/date-picker/time-picker
            // Container-fluid starts
          include ../../components/footer
    include ../../components/footer-files

