-var sidebar                = true;
-var theme_customizer       = true;
-var scrollbar              = true;
-var height_equal = true;
include ../../components/mixin
doctype html
html(lang='en') 
  include ../../components/header-files
  body
    include ../../components/tap-top
    include ../../components/loader
    main#pageWrapper.page-wrapper.compact-wrapper
        include ../../components/header/header
        .page-body-wrapper
          include ../../components/sidebar
          .page-body
            .container-fluid
              +breadcrumb(['Ui Kits','Helper Classes'],'Helper Classes')
            // Container-fluid starts
            .container-fluid
              .row 
                .col-xl-12
                  include ../../components/Ui-kits/helper-classes/style-border
                .col-xl-12
                  include ../../components/Ui-kits/helper-classes/display-border
                .col-xl-12
                  include ../../components/Ui-kits/helper-classes/background-helper
                .col-xl-12
                  include ../../components/Ui-kits/helper-classes/border-color
                .col-xl-6
                  include ../../components/Ui-kits/helper-classes/image-size
                .col-xl-6
                  include ../../components/Ui-kits/helper-classes/font-style
                .col-xl-7
                  include ../../components/Ui-kits/typography/font-weight
                .col-xl-5 
                  include ../../components/Ui-kits/typography/text-color
                .col-xl-12
                  include ../../components/Ui-kits/helper-classes/font-size
            // Container-fluid ends
          include ../../components/footer
    include ../../components/footer-files