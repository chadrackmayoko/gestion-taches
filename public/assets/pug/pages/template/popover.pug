-var sidebar                = true;
-var theme_customizer       = true;
-var scrollbar              = true;
-var prism                  = true;
-var page_clipboard         = true;
-var customcard             = true;
-var popover       = true;
include ../../components/mixin
doctype html
html(lang='en') 
  include ../../components/header-files
  body
    include ../../components/tap-top
    include ../../components/loader
    main#pageWrapper.page-wrapper.compact-wrapper
        include ../../components/header/header
        .page-body-wrapper
          include ../../components/sidebar
          .page-body
            .container-fluid
              +breadcrumb(['Ui Kits','Popover'],'Popover')
            // Container-fluid starts
            .container-fluid
              .row 
                .col-xl-12
                  include ../../components/Ui-kits/popover/basic-popover
                .col-xl-12
                  include ../../components/Ui-kits/popover/direction-popover
                .col-xl-12
                  include ../../components/Ui-kits/popover/offset-popover
            // Container-fluid ends
          include ../../components/footer
    include ../../components/footer-files