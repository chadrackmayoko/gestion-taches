- var sidebar               = false;
- var password_show = true;
include ../../components/mixin
doctype html
html(lang='en')
  include ../../components/header-files
  body
    include ../../components/tap-top
    // login page start
    .container-fluid
      .row
        .col-12.p-0
          .login-card.login-dark
            div
              div
                a.logo.text-center(href="index.html")
                  img.img-fluid.for-light(src="../assets/images/logo/logo.png" alt="looginpage" )
                  img.img-fluid.for-dark.m-auto(src="../assets/images/logo/dark-logo.png" alt="logo")
              .login-main 
                form.theme-form
                  h2.text-center Sign in to account
                  p.text-center Enter your email &amp; password to login
                  .form-group
                    label.col-form-label Email Address
                    input.form-control(type='email', required='' placeholder='Test@gmail.com')
                  .form-group
                    label.col-form-label Password
                    .form-input.position-relative
                      input.form-control(type='password', name='login[password]', required='' placeholder="*********")
                      .show-hide
                        span.show                          
                  .form-group.mb-0.checkbox-checked
                    .form-check.checkbox-solid-info
                      input#solid6.form-check-input(type='checkbox')
                      label.form-check-label(for='solid6') Remember password
                    a.link-two(href='forget-password.html') Forgot password?
                    .text-end.mt-3
                      a.btn.btn-primary.btn-block.w-100.text-white(href="index.html") Sign in
                  .login-social-title
                    h6 Or Sign in with                 
                  .form-group
                    ul.login-social
                      li
                        a(href='https://www.linkedin.com' target='_blank')
                            i.icon-linkedin
                      li
                        a(href='https://twitter.com' target='_blank')
                            i.icon-twitter
                      li
                        a(href='https://www.facebook.com' target='_blank')
                            i.icon-facebook
                      li
                        a(href='https://www.instagram.com' target='_blank')
                            i.icon-instagram
                  p.mt-4.mb-0.text-center Don't have account?
                    a.ms-2(href="sign-up.html") Create Account

      include ../../components/footer-files
