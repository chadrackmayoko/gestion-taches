-var sidebar                = true;
-var theme_customizer       = true;
-var scrollbar              = true;
-var md_sidebar = true;
include ../../components/mixin
doctype html
html(lang='en') 
  include ../../components/header-files
  body
    include ../../components/tap-top
    include ../../components/loader
    main#pageWrapper.page-wrapper.compact-wrapper 
        include ../../components/header/header
        .page-body-wrapper
          include ../../components/sidebar
          .page-body 
            .container-fluid
              +breadcrumb(['Apps','File Manager'],'File Manager')
            // Container-fluid starts
            .container-fluid 
              .row
                .col-xl-3.box-col-6.pe-0
                  .md-sidebar
                      a.btn.btn-primary.md-sidebar-toggle(href="javascript:void(0)")
                        | file filter  
                      .md-sidebar-aside.custom-scrollbar 
                        .file-sidebar 
                          include ../../components/apps/file-manger/file-manager-sidebar.pug
                .col-xl-9.col-md-12.box-col-12
                  .file-content 
                      include ../../components/apps/file-manger/file-content.pug
